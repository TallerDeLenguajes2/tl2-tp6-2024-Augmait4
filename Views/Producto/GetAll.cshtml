<div class="container-fluid rounded border border-primary p-4 bg-info">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Secci√≥n De Herramientas De Productos</h4>
        <div class="d-flex">
            <button type="button" class="btn btn-danger btn-lg mx-2">Crear</button>
            <button type="button" class="btn btn-warning btn-lg mx-2">Modificar</button>
            <button type="button" class="btn btn-success btn-lg mx-2">Eliminar</button>
        </div>
    </div>
</div>
<table class="table table-dark table-striped mt-4">
    <thead>
        <tr>
            <th scope="col">IdProducto</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Producto in Model)
        {
            <tr>
                <td>@Producto.IdProducto</td>
                <td>@Producto.Descripcion</td>
                <td>@Producto.Precio</td>
            </tr>
        }
    </tbody>
</table>